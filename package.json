{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "test": "lerna run test",
    "clean": "rimraf packages/**/lib",
    "lint": "tslint -c tslint.json 'packages/*/src/**/*.ts'",
    "precommit": "lint-staged",
    "prettify": "prettier --single-quote --trailing-comma all --write 'packages/zetapush-*/src/**/*.ts'"
  },
  "devDependencies": {
    "@types/node": "^8.0.50",
    "husky": "^0.14.3",
    "lerna": "^2.5.1",
    "lint-staged": "^4.3.0",
    "prettier": "^1.7.4",
    "rimraf": "^2.6.2",
    "tslint": "^5.8.0",
    "typescript": "^2.6.0"
  },
  "lint-staged": {
    "packages/zetapush-*/src/**/*.ts": [
      "prettier --single-quote --trailing-comma all --write",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
